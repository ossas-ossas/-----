
.container.data-v-57280228 {
	min-height: 100vh;
	background: linear-gradient(180deg, #fff 0%, #F5F9FC 100%);
	padding: 60rpx 40rpx 40rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	position: relative;
	overflow: hidden;
}

/* 移除背景图装饰，微信小程序不支持 WXSS 中使用本地图片 */

/* Logo 和品牌标语区域 */
.logo-section.data-v-57280228 {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 50rpx;
}
.logo-wrapper.data-v-57280228 {
	width: 320rpx;
	height: 320rpx;
	background: #fff;
	border-radius: 32rpx;
	box-shadow: 0 12rpx 40rpx rgba(233, 58, 138, 0.15);
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 24rpx;
	transition: all 0.3s ease;
	overflow: hidden;
}
.logo-wrapper.data-v-57280228:hover {
	-webkit-transform: scale(1.05);
	        transform: scale(1.05);
	box-shadow: 0 16rpx 48rpx rgba(233, 58, 138, 0.25);
}
.logo.data-v-57280228 {
	width: 280rpx;
	height: 280rpx;
}
.brand-name.data-v-57280228 {
	font-size: 38rpx;
	font-weight: bold;
	color: #E93A8A;
	margin-bottom: 12rpx;
	text-align: center;
}
.brand-sub-slogan.data-v-57280228 {
	font-size: 26rpx;
	color: #999;
	line-height: 1.6;
	text-align: center;
}

/* 主标题区域 */
.title-section.data-v-57280228 {
	text-align: center;
	margin-bottom: 60rpx;
}
.main-title.data-v-57280228 {
	display: block;
	font-size: 44rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 16rpx;
	line-height: 1.4;
}
.subtitle.data-v-57280228 {
	display: block;
	font-size: 28rpx;
	color: #999;
	line-height: 1.5;
}

/* 步骤卡片区域 */
.steps-section.data-v-57280228 {
	width: 100%;
	margin-bottom: 60rpx;
}
.step-card.data-v-57280228 {
	background: #fff;
	border-radius: 16rpx;
	margin-bottom: 24rpx;
	padding: 30rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
	position: relative;
	overflow: hidden;
}
.step-indicator.data-v-57280228 {
	position: absolute;
	left: 0;
	top: 0;
	bottom: 0;
	width: 8rpx;
	background: linear-gradient(180deg, #E93A8A, #FF6BA8);
}
.step-content.data-v-57280228 {
	display: flex;
	flex-direction: column;
}
.step-number.data-v-57280228 {
	display: inline-block;
	width: 56rpx;
	height: 56rpx;
	line-height: 56rpx;
	text-align: center;
	background: linear-gradient(135deg, #E93A8A, #009FC2);
	border-radius: 12rpx;
	font-size: 24rpx;
	font-weight: bold;
	color: #fff;
	margin-bottom: 16rpx;
	box-shadow: 0 4rpx 12rpx rgba(233, 58, 138, 0.3);
}
.step-title.data-v-57280228 {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 8rpx;
	line-height: 1.4;
}
.step-desc.data-v-57280228 {
	font-size: 26rpx;
	color: #999;
	line-height: 1.5;
}

/* 按钮区域 */
.button-section.data-v-57280228 {
	width: 100%;
	margin-bottom: 40rpx;
}
.start-button.data-v-57280228 {
	width: 100%;
	height: 96rpx;
	background: linear-gradient(135deg, #E93A8A, #009FC2);
	border-radius: 48rpx;
	border: none;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 8rpx 30rpx rgba(233, 58, 138, 0.4);
	position: relative;
	overflow: hidden;
}
.start-button.data-v-57280228::before {
	content: '';
	position: absolute;
	top: 0;
	left: -100%;
	width: 100%;
	height: 100%;
	background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
	transition: left 0.5s;
}
.start-button.data-v-57280228:active::before {
	left: 100%;
}
.button-text.data-v-57280228 {
	font-size: 36rpx;
	font-weight: bold;
	color: #fff;
}

/* 登录按钮 */
.login-button.data-v-57280228 {
	width: 100%;
	height: 80rpx;
	background: #fff;
	border-radius: 40rpx;
	border: 2rpx solid #E93A8A;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 20rpx;
	box-shadow: 0 4rpx 12rpx rgba(233, 58, 138, 0.2);
}
.login-button.data-v-57280228:active {
	background: #F5F9FC;
}
.login-button-text.data-v-57280228 {
	font-size: 28rpx;
	font-weight: 500;
	color: #E93A8A;
}

/* 版权信息 */
.footer.data-v-57280228 {
	text-align: center;
	margin-top: auto;
	padding-top: 40rpx;
}
.footer-text.data-v-57280228 {
	display: block;
	font-size: 24rpx;
	color: #999;
	margin-bottom: 8rpx;
	line-height: 1.5;
}
.footer-subtext.data-v-57280228 {
	display: block;
	font-size: 22rpx;
	color: #ccc;
	line-height: 1.5;
}

/* 移动端适配 */
@media screen and (max-width: 750px) {
.container.data-v-57280228 {
		padding: 40rpx 30rpx 30rpx;
}
.logo-wrapper.data-v-57280228 {
		width: 260rpx;
		height: 260rpx;
}
.logo.data-v-57280228 {
		width: 230rpx;
		height: 230rpx;
}
.brand-name.data-v-57280228 {
		font-size: 34rpx;
}
.main-title.data-v-57280228 {
		font-size: 40rpx;
}
.step-card.data-v-57280228 {
		padding: 24rpx;
}
.step-title.data-v-57280228 {
		font-size: 30rpx;
}
.step-desc.data-v-57280228 {
		font-size: 24rpx;
}
.start-button.data-v-57280228 {
		height: 88rpx;
}
.button-text.data-v-57280228 {
		font-size: 34rpx;
}
}

