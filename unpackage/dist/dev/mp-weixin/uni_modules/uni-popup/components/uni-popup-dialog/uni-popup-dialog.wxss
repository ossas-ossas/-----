.uni-popup-dialog {
  width: 300px;
  background-color: #fff;
}
.uni-dialog-title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-top: 25px;
}
.uni-dialog-title-text {
  font-size: 16px;
  font-weight: 500;
}
.uni-dialog-content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 20px;
}
.uni-dialog-content-text {
  font-size: 14px;
  color: #6C6C6C;
}
.uni-dialog-button-group {
  display: flex;
  flex-direction: row;
  border-top-color: #f5f5f5;
  border-top-style: solid;
  border-top-width: 1px;
}
.uni-dialog-button {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 45px;
}
.uni-border-left {
  border-left-color: #f0f0f0;
  border-left-style: solid;
  border-left-width: 1px;
}
.uni-dialog-button-text {
  font-size: 16px;
  color: #333;
}
.uni-button-color {
  color: #007aff;
}
.uni-dialog-input {
  flex: 1;
  font-size: 14px;
  border: 1px #eee solid;
  height: 40px;
  padding: 0 10px;
  border-radius: 5px;
  color: #555;
}
.uni-popup__success {
  color: #4cd964;
}
.uni-popup__warn {
  color: #f0ad4e;
}
.uni-popup__error {
  color: #dd524d;
}
.uni-popup__info {
  color: #909399;
}
