.uni-content {
  padding: 0 60rpx;
}
.login-logo {
  display: none;
}
@media screen and (min-width: 690px) {
.uni-content {
    padding: 0;
    max-width: 300px;
    margin-left: calc(50% - 200px);
}
}
.uni-content view {
  box-sizing: border-box;
}
.title {
  display: flex;
  padding: 18px 0;
  font-weight: 800;
  flex-direction: column;
}
.tip {
  display: flex;
  color: #BDBDC0;
  font-size: 11px;
  margin: 6px 0;
}
.uni-content  .uni-easyinput__content,
.input-box {
  height: 44px;
  background-color: #F8F8F8 !important;
  border-radius: 0;
  font-size: 14px;
  display: flex;
  flex: 1;
}
.link {
  color: #04498c;
  cursor: pointer;
}
.uni-content  .uni-forms-item__inner {
  padding-bottom: 8px;
}
.uni-btn {
  text-align: center;
  height: 40px;
  line-height: 40px;
  margin: 15px 0 10px 0;
  color: #FFF !important;
  border-radius: 5px;
  font-size: 16px;
}
.uni-body.uni_modules-uni-id-pages-pages-login-login-withoutpwd {
  height: auto !important;
}
.checkbox-box,
.uni-label-pointer {
  align-items: center;
  display: flex;
  flex-direction: row;
}
.item {
  flex-direction: row;
}
.text {
  line-height: 26px;
}
.checkbox-box  .uni-checkbox-input {
  border-radius: 100%;
}
.checkbox-box  .uni-checkbox-input.uni-checkbox-input-checked {
  border-color: #87CEEB;
  color: #FFFFFF !important;
  background-color: #87CEEB;
}
.agreements {
  margin-bottom: 20px;
}
.face-icon {
  width: 100px;
  height: 100px;
  margin: 50px auto 30px;
}
.face-icon-image {
  width: 100%;
  height: 100%;
  display: block;
}
.error-title {
  font-size: 18px;
  text-align: center;
  font-weight: bold;
}
.error-description {
  font-size: 13px;
  color: #999999;
  margin: 10px 0 20px;
  text-align: center;
}
.dev-tip {
  margin-top: 20px;
  font-size: 13px;
  color: #999;
  text-align: center;
}
