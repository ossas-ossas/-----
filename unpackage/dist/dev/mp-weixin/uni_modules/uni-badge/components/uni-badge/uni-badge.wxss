.uni-badge {
  display: flex;
  overflow: hidden;
  box-sizing: border-box;
  -webkit-font-feature-settings: "tnum";
          font-feature-settings: "tnum";
  min-width: 20px;
  justify-content: center;
  flex-direction: row;
  height: 20px;
  padding: 0 4px;
  line-height: 18px;
  color: #fff;
  border-radius: 100px;
  background-color: #909399;
