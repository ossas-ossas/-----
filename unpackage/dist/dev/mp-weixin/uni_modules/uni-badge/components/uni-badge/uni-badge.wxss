.uni-badge--x {
  display: inline-block;
  position: relative;
}
.uni-badge--absolute {
  position: absolute;
}
.uni-badge--small {
  -webkit-transform: scale(0.8);
          transform: scale(0.8);
  -webkit-transform-origin: center center;
